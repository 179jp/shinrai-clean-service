---
import Layout from '../layouts/Layout.astro';
import Seasonal from '../content/seasonal.md';
import { spotServices } from '../content/spotServices';
import { regularPlans } from '../content/regularPlans';
import { options } from '../content/options';
import { bundleDiscounts } from '../content/bundleDiscounts';
import { notes } from '../content/notes';

const company = {
        name: 'ダミー株式会社',
        representative: '山田 太郎',
        address: '東京都千代田区丸の内1-1-1',
        phone: '03-1234-5678',
        email: 'info@example.com',
};
---

<Layout>
        <div class="page">
                <header class="hero">
                        <div class="hero__copy">
                                <p class="eyebrow">SHINRAI CLEAN SERVICE</p>
                                <h1>
                                        カビの天敵<br />
                                        汚れの刺客
                                </h1>
                                <p class="lede">
                                        住まいの空気を変える、潔いクリーニング。白を基調にした凛とした仕上がりで、
                                        毎日の暮らしに軽やかさを。
                                </p>
                        </div>
                </header>

                <section class="section" id="services">
                        <div class="section__header">
                                <p class="eyebrow">Service & Pricing</p>
                                <h2>サービス & 料金表</h2>
                                <p class="description">添付の料金表をベースにした、わかりやすい価格設定です。</p>
                        </div>

                        <div class="grid grid--three">
                                <div class="panel">
                                        <p class="panel__title">スポットメニュー</p>
                                        <dl class="list">
                                                {spotServices.map((item) => (
                                                        <div class="list__row" role="listitem">
                                                                <dt>{item.name}</dt>
                                                                <dd>{item.price}</dd>
                                                        </div>
                                                ))}
                                        </dl>
                                </div>

                                <div class="panel">
                                        <p class="panel__title">定期サービス</p>
                                        <div class="table">
                                                <div class="table__head">
                                                        <span>セット内容</span>
                                                        <span>1ヶ月定期</span>
                                                        <span>2ヶ月定期</span>
                                                </div>
                                                {regularPlans.map((plan) => (
                                                        <div class="table__row">
                                                                <span>{plan.set}</span>
                                                                <span>{plan.monthly}</span>
                                                                <span>{plan.bimonthly}</span>
                                                        </div>
                                                ))}
                                        </div>
                                </div>

                                <div class="panel">
                                        <p class="panel__title">オプション</p>
                                        <dl class="list">
                                                {options.map((option) => (
                                                        <div class="list__row" role="listitem">
                                                                <dt>{option.name}</dt>
                                                                <dd>{option.price}</dd>
                                                        </div>
                                                ))}
                                        </dl>
                                </div>
                        </div>

                        <div class="panel panel--muted">
                                <p class="panel__title">セット割</p>
                                <ul class="bullets">
                                        {bundleDiscounts.map((bundle) => (
                                                <li>{bundle}</li>
                                        ))}
                                </ul>
                                <p class="small">※ 一週間以内再クリーニング無料（条件あり）</p>
                        </div>

                        <div class="notes">
                                {notes.map((note) => (
                                        <p>※ {note}</p>
                                ))}
                                <p class="timestamp">2025年3月1日現在</p>
                        </div>
                </section>

                <section class="section" id="seasonal">
                        <div class="section__header">
                                <p class="eyebrow">Seasonal Picks</p>
                                <h2>季節のおすすめ</h2>
                                <p class="description">Markdownファイル（src/content/seasonal.md）を編集するだけで内容を更新できます。</p>
                        </div>
                        <article class="panel panel--muted markdown">
                                <Seasonal />
                        </article>
                </section>

                <section class="section" id="company">
                        <div class="section__header">
                                <p class="eyebrow">Company</p>
                                <h2>会社情報</h2>
                                <p class="description">運営情報は後日差し替え予定のダミーデータです。</p>
                        </div>
                        <dl class="panel company">
                                <div class="company__row">
                                        <dt>会社名</dt>
                                        <dd>{company.name}</dd>
                                </div>
                                <div class="company__row">
                                        <dt>代表者</dt>
                                        <dd>{company.representative}</dd>
                                </div>
                                <div class="company__row">
                                        <dt>住所</dt>
                                        <dd>{company.address}</dd>
                                </div>
                                <div class="company__row">
                                        <dt>電話</dt>
                                        <dd>{company.phone}</dd>
                                </div>
                                <div class="company__row">
                                        <dt>メール</dt>
                                        <dd><a href={`mailto:${company.email}`}>{company.email}</a></dd>
                                </div>
                        </dl>
                </section>
        </div>
</Layout>

<style>
        .page {
                max-width: 1140px;
                margin: 0 auto;
                padding: 56px 24px 104px;
                border-left: 1px solid #e5e7eb;
                border-right: 1px solid #e5e7eb;
        }

        .hero {
                min-height: calc(100vh - 160px);
                display: flex;
                align-items: center;
                padding: 96px 24px 72px;
                border-bottom: 1px solid #0f172a;
        }

        .hero__copy {
                max-width: 760px;
        }

        .hero__copy h1 {
                font-size: clamp(40px, 6vw, 64px);
                letter-spacing: 0.06em;
                margin: 14px 0 18px;
                line-height: 1.2;
        }

        .hero__copy .lede {
                margin: 0;
                color: #334155;
                max-width: 640px;
                font-size: clamp(17px, 2vw, 20px);
                line-height: 1.7;
        }

        .section {
                margin-top: 88px;
        }

        .section__header {
                margin-bottom: 24px;
                padding-bottom: 12px;
                border-bottom: 1px solid #0f172a;
        }

        h2 {
                margin: 10px 0 6px;
                font-size: 28px;
                letter-spacing: 0.06em;
                font-weight: 700;
        }

        .description {
                margin: 0;
                color: #475569;
        }

        .eyebrow {
                font-size: 12px;
                letter-spacing: 0.1em;
                text-transform: uppercase;
                color: #94a3b8;
                margin: 0;
        }

        .grid {
                display: grid;
                gap: 22px;
        }

        .grid--three {
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        }

        .panel {
                border-top: 1px solid #0f172a;
                padding: 18px 0 16px;
        }

        .panel__title {
                font-weight: 700;
                margin-bottom: 10px;
                letter-spacing: 0.08em;
                text-transform: uppercase;
                font-size: 13px;
        }

        .panel--muted {
                background: transparent;
        }

        .list {
                margin: 0;
                padding: 0;
        }

        .list__row {
                display: grid;
                grid-template-columns: 1fr auto;
                gap: 8px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .list__row:last-child {
                border-bottom: none;
        }

        dt {
                margin: 0;
                font-weight: 500;
        }

        dd {
                margin: 0;
                font-weight: 600;
        }

        .table {
                display: grid;
                gap: 8px;
        }

        .table__head,
        .table__row {
                display: grid;
                grid-template-columns: 1.3fr 0.9fr 0.9fr;
                gap: 12px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .table__head {
                font-size: 13px;
                letter-spacing: 0.04em;
                color: #94a3b8;
                text-transform: uppercase;
                border-bottom-color: #cbd5e1;
        }

        .table__row:last-child {
                border-bottom: none;
        }

        .bullets {
                margin: 0 0 8px;
                padding-left: 18px;
                color: #0f172a;
        }

        .bullets li {
                margin: 6px 0;
                font-weight: 600;
        }

        .small {
                font-size: 13px;
                color: #64748b;
                margin: 0;
        }

        .notes {
                margin-top: 18px;
                color: #475569;
        }

        .notes p {
                margin: 4px 0;
        }

        .timestamp {
                font-size: 13px;
                color: #94a3b8;
                margin-top: 12px;
        }

        .markdown :global(h3) {
                margin-top: 0;
        }

        .markdown :global(ul) {
                padding-left: 20px;
                margin: 8px 0 16px;
        }

        .markdown :global(blockquote) {
                margin: 0;
                padding: 12px 16px;
                border-left: 3px solid #cbd5e1;
                background: #ffffff;
                color: #475569;
        }

        .company {
                margin: 0;
                padding: 0;
        }

        .company__row {
                display: grid;
                grid-template-columns: 120px 1fr;
                gap: 12px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .company__row:last-child {
                border-bottom: none;
        }

        .company dt {
                color: #94a3b8;
                font-weight: 500;
        }

        .company dd {
                font-weight: 600;
        }

        @media (max-width: 960px) {
                .hero {
                        min-height: 70vh;
                        padding: 72px 32px 56px;
                }

                .company__row {
                        grid-template-columns: 1fr;
                }

                .table__head,
                .table__row {
                        grid-template-columns: 1fr 0.7fr 0.7fr;
                }
        }

        @media (max-width: 640px) {
                .page {
                        padding: 32px 18px 72px;
                }

                .hero {
                        min-height: 70vh;
                        padding: 48px 18px 40px;
                }

                .grid--three {
                        grid-template-columns: 1fr;
                }

                .table__head,
                .table__row {
                        grid-template-columns: 1fr;
                }

                .table__head span:nth-child(n + 2),
                .table__row span:nth-child(n + 2) {
                        color: #0f172a;
                }
        }
</style>
