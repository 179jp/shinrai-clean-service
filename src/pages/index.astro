---
import Layout from '../layouts/Layout.astro';
import Seasonal from '../content/seasonal.md';

const spotServices = [
        { name: 'キッチン', price: '¥19,000' },
        { name: 'レンジフード', price: '¥18,000' },
        { name: '浴室', price: '¥18,000' },
        { name: '浴室＋洗面台', price: '¥22,000' },
        { name: 'トイレ', price: '¥8,000' },
        { name: '浴室＋トイレ', price: '¥20,000' },
        { name: '浴室＋トイレ＋洗面台', price: '¥26,000' },
        { name: 'エアコンクリーニング（内部高圧洗浄コース）', price: '¥22,000' },
        { name: '室外機オプション', price: '¥4,000' },
];

const regularPlans = [
        {
                set: 'キッチン＋浴室＋トイレ＋洗面台',
                monthly: '¥20,000',
                bimonthly: '¥26,000',
        },
        {
                set: '浴室＋トイレ',
                monthly: '¥18,000',
                bimonthly: '¥20,000',
        },
        {
                set: 'トイレ＋洗面台',
                monthly: '¥16,000',
                bimonthly: '¥18,000',
        },
        {
                set: '浴室＋トイレ＋洗面台',
                monthly: '¥26,000',
                bimonthly: '¥28,000',
        },
];

const options = [
        { name: '鏡のウロコ取り', price: '¥7,000' },
        { name: '防カビコーティング', price: '¥8,000' },
        { name: '浴室床オフクリーニング', price: '¥4,000' },
        { name: '浴室エプロン内高圧洗浄', price: '¥4,000' },
        { name: '浴室オキシ漬け', price: '¥2,000' },
        { name: 'キッチンシンク研磨', price: '¥2,000' },
];

const bundleDiscounts = [
        'キッチン＋浴室＋トイレ＋洗面台：¥36,000',
        '浴室＋トイレ＋洗面台：¥26,000',
        '浴室＋トイレ：¥20,000',
        '浴室＋トイレ＋洗面台＋エアコン＋室外機：¥67,000',
];

const notes = [
        '価格は税込価格です。',
        '作業時間は汚れ・広さにより前後する場合があります。',
        '立合時間超過の場合は、30分毎に延長料金をいただく場合があります。',
        '駐車場代が有料の場合、お客様にてご負担をお願いします。',
        '同居のペットは別室への移動や外出をお願いする場合があります。',
        '上記以外にもメニューにない内容についても対応可能ですので、ご相談ください。',
];

const company = {
        name: 'ダミー株式会社',
        representative: '山田 太郎',
        address: '東京都千代田区丸の内1-1-1',
        phone: '03-1234-5678',
        email: 'info@example.com',
};
---

<Layout>
        <div class="page">
                <header class="hero">
                        <div class="hero__copy">
                                <p class="eyebrow">SHINRAI CLEAN SERVICE</p>
                                <h1>
                                        カビの天敵<br />
                                        汚れの刺客
                                </h1>
                                <p class="lede">
                                        白を基調とした清潔感あるクリーニングで、暮らしの空気を整えます。シンプルで見やすい料金表と、
                                        季節のおすすめメニューをご案内します。
                                </p>
                        </div>
                        <div class="hero__meta">
                                <div class="stat">
                                        <p class="label">対応エリア</p>
                                        <p class="value">首都圏・近郊</p>
                                </div>
                                <div class="stat">
                                        <p class="label">営業時間</p>
                                        <p class="value">9:00 - 18:00</p>
                                </div>
                        </div>
                </header>

                <section class="section" id="services">
                        <div class="section__header">
                                <p class="eyebrow">Service & Pricing</p>
                                <h2>サービス & 料金表</h2>
                                <p class="description">添付の料金表をベースにした、わかりやすい価格設定です。</p>
                        </div>

                        <div class="grid grid--three">
                                <div class="panel">
                                        <div class="panel__title">スポットメニュー</div>
                                        <dl class="list">
                                                {spotServices.map((item) => (
                                                        <div class="list__row" role="listitem">
                                                                <dt>{item.name}</dt>
                                                                <dd>{item.price}</dd>
                                                        </div>
                                                ))}
                                        </dl>
                                </div>

                                <div class="panel">
                                        <div class="panel__title">定期サービス</div>
                                        <div class="table">
                                                <div class="table__head">
                                                        <span>セット内容</span>
                                                        <span>1ヶ月定期</span>
                                                        <span>2ヶ月定期</span>
                                                </div>
                                                {regularPlans.map((plan) => (
                                                        <div class="table__row">
                                                                <span>{plan.set}</span>
                                                                <span>{plan.monthly}</span>
                                                                <span>{plan.bimonthly}</span>
                                                        </div>
                                                ))}
                                        </div>
                                </div>

                                <div class="panel">
                                        <div class="panel__title">オプション</div>
                                        <dl class="list">
                                                {options.map((option) => (
                                                        <div class="list__row" role="listitem">
                                                                <dt>{option.name}</dt>
                                                                <dd>{option.price}</dd>
                                                        </div>
                                                ))}
                                        </dl>
                                </div>
                        </div>

                        <div class="panel panel--muted">
                                <div class="panel__title">セット割</div>
                                <ul class="bullets">
                                        {bundleDiscounts.map((bundle) => (
                                                <li>{bundle}</li>
                                        ))}
                                </ul>
                                <p class="small">※ 一週間以内再クリーニング無料（条件あり）</p>
                        </div>

                        <div class="notes">
                                {notes.map((note) => (
                                        <p>※ {note}</p>
                                ))}
                                <p class="timestamp">2025年3月1日現在</p>
                        </div>
                </section>

                <section class="section" id="seasonal">
                        <div class="section__header">
                                <p class="eyebrow">Seasonal Picks</p>
                                <h2>季節のおすすめ</h2>
                                <p class="description">Markdownファイル（src/content/seasonal.md）を編集するだけで内容を更新できます。</p>
                        </div>
                        <div class="panel panel--muted">
                                <article class="markdown">
                                        <Seasonal />
                                </article>
                        </div>
                </section>

                <section class="section" id="company">
                        <div class="section__header">
                                <p class="eyebrow">Company</p>
                                <h2>会社情報</h2>
                                <p class="description">運営情報は後日差し替え予定のダミーデータです。</p>
                        </div>
                        <div class="panel">
                                <dl class="company">
                                        <div class="company__row">
                                                <dt>会社名</dt>
                                                <dd>{company.name}</dd>
                                        </div>
                                        <div class="company__row">
                                                <dt>代表者</dt>
                                                <dd>{company.representative}</dd>
                                        </div>
                                        <div class="company__row">
                                                <dt>住所</dt>
                                                <dd>{company.address}</dd>
                                        </div>
                                        <div class="company__row">
                                                <dt>電話</dt>
                                                <dd>{company.phone}</dd>
                                        </div>
                                        <div class="company__row">
                                                <dt>メール</dt>
                                                <dd><a href={`mailto:${company.email}`}>{company.email}</a></dd>
                                        </div>
                                </dl>
                        </div>
                </section>
        </div>
</Layout>

<style>
        .page {
                max-width: 1200px;
                margin: 0 auto;
                padding: 48px 24px 96px;
        }

        .hero {
                display: grid;
                grid-template-columns: 2fr 1fr;
                gap: 24px;
                align-items: end;
                padding: 48px;
                border: 1px solid #e5e7eb;
                border-radius: 16px;
                background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
        }

        .hero__copy h1 {
                font-size: clamp(32px, 4vw, 48px);
                letter-spacing: 0.03em;
                margin: 8px 0 12px;
                line-height: 1.3;
        }

        .hero__copy .lede {
                margin: 0;
                color: #475569;
        }

        .hero__meta {
                display: grid;
                gap: 12px;
                align-self: center;
        }

        .stat {
                border: 1px solid #e5e7eb;
                border-radius: 12px;
                padding: 14px;
                background: #ffffff;
        }

        .stat .label {
                font-size: 12px;
                letter-spacing: 0.08em;
                text-transform: uppercase;
                color: #94a3b8;
                margin: 0 0 4px;
        }

        .stat .value {
                margin: 0;
                font-weight: 600;
        }

        .section {
                margin-top: 72px;
        }

        .section__header {
                margin-bottom: 20px;
        }

        h2 {
                margin: 6px 0 8px;
                font-size: 26px;
                letter-spacing: 0.02em;
        }

        .description {
                margin: 0;
                color: #475569;
        }

        .eyebrow {
                font-size: 12px;
                letter-spacing: 0.1em;
                text-transform: uppercase;
                color: #94a3b8;
                margin: 0;
        }

        .grid {
                display: grid;
                gap: 16px;
        }

        .grid--three {
                grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        }

        .panel {
                border: 1px solid #e5e7eb;
                border-radius: 14px;
                padding: 20px;
                background: #ffffff;
        }

        .panel__title {
                font-weight: 600;
                margin-bottom: 12px;
                letter-spacing: 0.02em;
        }

        .panel--muted {
                background: #f8fafc;
        }

        .list {
                margin: 0;
                padding: 0;
        }

        .list__row {
                display: grid;
                grid-template-columns: 1fr auto;
                gap: 8px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .list__row:last-child {
                border-bottom: none;
        }

        dt {
                margin: 0;
                font-weight: 500;
        }

        dd {
                margin: 0;
                font-weight: 600;
        }

        .table {
                display: grid;
                gap: 8px;
        }

        .table__head,
        .table__row {
                display: grid;
                grid-template-columns: 1.3fr 0.9fr 0.9fr;
                gap: 12px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .table__head {
                font-size: 13px;
                letter-spacing: 0.04em;
                color: #94a3b8;
                text-transform: uppercase;
                border-bottom-color: #cbd5e1;
        }

        .table__row:last-child {
                border-bottom: none;
        }

        .bullets {
                margin: 0 0 8px;
                padding-left: 18px;
                color: #0f172a;
        }

        .bullets li {
                margin: 6px 0;
                font-weight: 600;
        }

        .small {
                font-size: 13px;
                color: #64748b;
                margin: 0;
        }

        .notes {
                margin-top: 18px;
                color: #475569;
        }

        .notes p {
                margin: 4px 0;
        }

        .timestamp {
                font-size: 13px;
                color: #94a3b8;
                margin-top: 12px;
        }

        .markdown :global(h3) {
                margin-top: 0;
        }

        .markdown :global(ul) {
                padding-left: 20px;
                margin: 8px 0 16px;
        }

        .markdown :global(blockquote) {
                margin: 0;
                padding: 12px 16px;
                border-left: 3px solid #cbd5e1;
                background: #ffffff;
                color: #475569;
        }

        .company {
                margin: 0;
                padding: 0;
        }

        .company__row {
                display: grid;
                grid-template-columns: 120px 1fr;
                gap: 12px;
                padding: 10px 0;
                border-bottom: 1px solid #e5e7eb;
        }

        .company__row:last-child {
                border-bottom: none;
        }

        .company dt {
                color: #94a3b8;
                font-weight: 500;
        }

        .company dd {
                font-weight: 600;
        }

        @media (max-width: 960px) {
                .hero {
                        grid-template-columns: 1fr;
                        padding: 32px;
                }

                .company__row {
                        grid-template-columns: 1fr;
                }

                .table__head,
                .table__row {
                        grid-template-columns: 1fr 0.7fr 0.7fr;
                }
        }

        @media (max-width: 640px) {
                .page {
                        padding: 32px 18px 72px;
                }

                .hero {
                        padding: 24px;
                }

                .grid--three {
                        grid-template-columns: 1fr;
                }

                .table__head,
                .table__row {
                        grid-template-columns: 1fr;
                }

                .table__head span:nth-child(n + 2),
                .table__row span:nth-child(n + 2) {
                        color: #0f172a;
                }
        }
</style>
